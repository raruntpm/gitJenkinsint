pipeline {
    agent any  // Run on any available agent

    stages {
        stage('Stage 1: Checkout') {
            steps {
                echo 'Checking out the source code...'
            }
        }

        stage('Stage 2: Build') {
            steps {
                echo 'Building the project...'
            }
        }

        stage('Stage 3: Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Stage 4: Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }
}
